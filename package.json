{
  "name": "beatmybag-api",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --target bun --outdir dist",
    "start": "NODE_ENV=production bun run dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:migrate": "bun run src/db/migrate.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "bun run build && bun run db:migrate"
  },
  "dependencies": {
    "@libsql/client": "^0.5.0",
    "@libsql/kysely-libsql": "^0.3.0",
    "hono": "^4.0.0",
    "kysely": "^0.27.0",
    "nanoid": "^5.0.0",
    "openai": "^4.28.0",
    "stripe": "^14.14.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "typescript": "^5.3.0"
  }
}
